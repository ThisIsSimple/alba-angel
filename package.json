{
  "name": "smartstore",
  "version": "0.1.0",
  "private": true,
  "main": "electron/index.js",
  "homepage": "./",
  "scripts": {
    "test": "craco start",
    "start": "concurrently \"cross-env BROWSER=none cross-env TAILWIND_MODE=watch craco start\" \"wait-on http://localhost:3000 & electron .\"",
    "build": "craco build",
    "build-electron": "mkdir build/src && cp -r electron/. build/electron",
    "deploy:win": "electron-builder --win nsis:ia32 -c.extraMetadata.main=build/electron/index.js",
    "deploy:mac": "CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac -c.extraMetadata.main=build/electron/index.js",
    "eject": "react-scripts eject"
  },
  "build": {
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "productName": "지니와 알바요정 윰",
    "appId": "space.cordelia273.alba-angel",
    "asar": true,
    "extends": null,
    "mac": {
      "target": [
        "default"
      ]
    },
    "dmg": {
      "title": "지니와 알바요정 윰"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "perMachine": true,
      "language": 1042,
      "shortcutName": "지니와 알바요정 윰",
      "artifactName": "알바요정-${version}.${ext}",
      "uninstallDisplayName": "지니와 알바요정 윰 삭제"
    },
    "directories": {
      "buildResources": "./build/",
      "output": "./dist/"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^0.24.0",
    "electron-dl": "^3.3.0",
    "lodash": "^4.17.21",
    "react": "^17.0.2",
    "react-detect-offline": "^2.4.5",
    "react-dom": "^17.0.2",
    "react-scripts": "5.0.0",
    "react-spinners": "^0.11.0",
    "web-vitals": "^2.1.2",
    "xlsx": "^0.17.4"
  },
  "devDependencies": {
    "@craco/craco": "^6.4.3",
    "autoprefixer": "^10.4.0",
    "concurrently": "^6.5.1",
    "cross-env": "^7.0.3",
    "electron": "^16.0.5",
    "electron-builder": "^22.14.5",
    "postcss": "^8.4.5",
    "tailwindcss": "^3.0.7",
    "wait-on": "^6.0.0"
  }
}
